default: install

TOP ?= $(CURDIR)
MODPATH =

include $(TOP)/Makefile.config

#TODO: install symlink to includes in /usr/include/ngs
#TODO: add libraries to $LD_LIBRARY_PATH by updating /etc/profile.d

#-------------------------------------------------------------------------------
# install
# 
ifeq (linux, $(OS))

LIBRARIES_TO_INSTALL = \
    ngs-sdk.$(SHLX) \
    ngs-sdk.$(VERSION_SHLX) \
    ngs-sdk.$(MAJVERS_SHLX) \
    ngs-c++.$(LIBX) \
    ngs-c++.$(VERSION_LIBX) \
    ngs-c++.$(MAJVERS_LIBX) \
    ngs-adapt-c++.$(LIBX) \
    ngs-adapt-c++.$(VERSION_LIBX) \
    ngs-adapt-c++.$(MAJVERS_LIBX) \
    
LIB_TARGET = $(INST_LIBDIR)$(BITS)

copylibs:
	@ echo "Installing libraries to $(LIB_TARGET)"
	@ mkdir -p $(LIB_TARGET) 
	@ cp -P $(addprefix  $(LIBDIR)/$(LPFX), $(LIBRARIES_TO_INSTALL)) $(LIB_TARGET)
    
copyincludes:
	@ echo "Installing includes to $(INST_INCDIR)"
	@ mkdir -p $(INST_INCDIR)
	@ cp -r $(TOP)/ngs $(INST_INCDIR)/   

copyexamples:
	@ echo "Installing examples to $(INST_SHAREDIR)"
	@ mkdir -p $(INST_SHAREDIR)
	@ cp -r $(TOP)/examples/* $(INST_SHAREDIR)/
    
install: copylibs copyincludes copyexamples
    
.PHONY: copylibs copyincludes copyexamples

else
install:

endif

.PHONY: install

